{
  "name": "@glandjs/http",
  "version": "1.0.0-alpha",
  "description": "Glands is a web framework for Node.js",
  "homepage": "https://github.com/glandjs/http#readme",
  "author": "Mahdi",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test:unit": "mocha --require ts-node/register test/unit/**/*.spec.ts",
    "test:integration": "mocha --require ts-node/register test/integration/**/*.spec.ts",
    "lint": "prettier --check .",
    "version": "changeset version",
    "release": "pnpm build && pnpm changeset publish",
    "release:alpha": "pnpm changeset publish --tag alpha",
    "build": "pnpm -r build"
  },
  "lint-staged": {
    "**/*.ts": "prettier --ignore-path ./.prettierignore --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glandjs/http.git"
  },
  "bugs": {
    "url": "https://github.com/glandjs/http/issues"
  },
  "keywords": [
    "gland",
    "http",
    "express",
    "fastify",
    "nodejs",
    "web",
    "medishn"
  ],
  "engines": {
    "node": ">= 20"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@types/chai": "^4.3.19",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.0.0",
    "@types/sinon": "^17.0.3",
    "chai": "^4.3.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "mocha": "^10.7.3",
    "prettier": "^3.5.3",
    "sinon": "^19.0.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@glandjs/common": "1.0.1-alpha",
    "@glandjs/core": "1.0.1-alpha",
    "@glandjs/events": "1.0.1-alpha",
    "@medishn/toolkit": "^1.0.3",
    "tslib": "^2.8.1"
  }
}
